<h3 class="mb-5">Users management page</h3>

<div class="mb-4">
  <a href="/add-user" class="btn btn-primary">Add new user</a>
</div>

<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Email</th>
      <th scope="col">Phone</th>
      <th scope="col" class="text-end">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% if(!users.length) { %>
      <tr>
        <td colspan="5">No results found...</td>
      </tr>
    <% } else { %>
      <% users.map(({ id, name, email, birthDate }) => { %>
        <tr>
          <th scope="row"><%= id %></th>
          <td><%= name %></td>
          <td><%= email %></td>
          <td><%= birthDate %></td>
          <td class="text-end">
            <a href="<%= id %>" type="button" class="btn btn-small"><i class="bi bi-eye"></i>&nbsp; View</a>
            <a href="/edit-user/<%= id %>" type="button" class="btn btn-small"><i class="bi bi-pencil"></i>&nbsp; Edit</a>
            <a href="/delete-user/<%= id %>" type="button" class="btn btn-small text-danger"><i class="bi bi-trash"></i>&nbsp; Delete</a>
          </td>
        </tr>
      <% }) %>
    <% } %>
  </tbody>
</table>